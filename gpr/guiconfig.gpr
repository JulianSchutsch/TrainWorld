with "config";

abstract project GUIConfig is

   type Switch_Type is ("On","Off");

   Win32OpenGLContext : Switch_Type:="Off";
   XOpenGLContext     : Switch_Type:="Off";

   case Config.Plattform is
      when "Linux" =>
         XOpenGLContext : Switch_Type:="On";
      when "WindowsNT" =>
         Win32OpenGLContext : Switch_Type:="On";
   end case;

end GUIConfig;
