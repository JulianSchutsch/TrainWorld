with "config";
with "switches";
with "plaincore";

project Core is

  Dir:=Core'Project_Dir & "/";

  Linker_Switches:=();

  for Languages use ("Ada");

  package Compiler is
    for Default_Switches("Ada") use Switches.Compiler_Switches;
  end Compiler;

  for Source_Dirs use
    (Dir&"../src/win32",
     Dir&"../src/unix");

end Core;
