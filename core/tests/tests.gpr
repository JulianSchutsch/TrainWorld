with "core";

project Tests is

  Dir:=Tests'Project_Dir & "/";

  for Languages use ("Ada");

  for Main use ("test.adb");

  package Compiler is
    for Default_Switches("Ada") use
      ("-gnat12",
       "-gnato",
       "-gnatn",
       "-g",
       "-gnatf",
       "-Wall",
       "-O0",
       "-fno-strict-aliasing",
       "-gnatwa",
       "-gnatVa",
       "-gnata");
  end Compiler;

  package Linker is
    for Default_Switches("Ada") use
      ("-lgmem");
  end Linker;

  for Source_Dirs use
    (Dir & ".",
     Dir & "bytes",
     Dir & "config",
     Dir & "implementations");

end Tests;
