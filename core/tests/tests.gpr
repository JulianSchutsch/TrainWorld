with "core";
with "Config";

project Tests is

  Dir:=Tests'Project_Dir & "/";

  for Languages use ("Ada");

  for Main use ("test.adb");

  package Compiler is
    for Default_Switches("Ada") use Config.Compiler_Switches;
  end Compiler;

  package Linker is
    for Default_Switches("Ada") use
      ("-lgmem");
  end Linker;

  for Source_Dirs use
    (Dir & ".",
     Dir & "bytes",
     Dir & "config",
     Dir & "implementations",
     Dir & "parsers",
     Dir & "globalloop");

end Tests;
